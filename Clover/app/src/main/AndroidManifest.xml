<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.wingy.jp8chan"
    android:installLocation="auto">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.NFC"/>

    <application
        android:name="org.wingy.jp8chan.ChanApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="org.wingy.jp8chan.ui.activity.BoardActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <action android:name="android.nfc.action.NDEF_DISCOVERED">
                </action>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="jp.8chan.co"
                    android:pathPrefix="/"
                    android:scheme="http"/>
                <data
                    android:host="jp.8chan.co"
                    android:pathPrefix="/"
                    android:scheme="https"/>
                <data
                    android:host="8ch.net"
                    android:pathPrefix="/"
                    android:scheme="http"/>
                <data
                    android:host="8ch.net"
                    android:pathPrefix="/"
                    android:scheme="https"/>
                <data
                    android:host="www.8ch.net"
                    android:pathPrefix="/"
                    android:scheme="http"/>
                <data
                    android:host="www.8ch.net"
                    android:pathPrefix="/"
                    android:scheme="https"/>

            </intent-filter>
        </activity>
        <activity
            android:name="org.wingy.jp8chan.ui.activity.ReplyActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
            android:name="org.wingy.jp8chan.ui.activity.SettingsActivity"
            android:label="@string/action_settings"
            android:parentActivityName="org.wingy.jp8chan.ui.activity.BoardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.wingy.jp8chan.ui.activity.BoardActivity"/>
        </activity>
        <activity
            android:name="org.wingy.jp8chan.ui.activity.WatchSettingsActivity"
            android:label="@string/preference_watch_settings"
            android:parentActivityName="org.wingy.jp8chan.ui.activity.BoardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.wingy.jp8chan.ui.activity.BoardActivity"/>
        </activity>
        <activity
            android:name="org.wingy.jp8chan.ui.activity.AboutActivity"
            android:label="@string/preference_about"
            android:parentActivityName="org.wingy.jp8chan.ui.activity.BoardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.wingy.jp8chan.ui.activity.BoardActivity"/>
        </activity>
        <activity
            android:name="org.wingy.jp8chan.ui.activity.BoardEditor"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/board_edit"
            android:parentActivityName="org.wingy.jp8chan.ui.activity.BoardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.wingy.jp8chan.ui.activity.BoardActivity"/>
        </activity>
        <activity
            android:name="org.wingy.jp8chan.ui.activity.ImageViewActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="singleTop"
            android:theme="@style/Theme.ImageList">
        </activity>
        <activity android:name="org.wingy.jp8chan.ui.activity.ImagePickActivity">
        </activity>
        <activity android:name="org.wingy.jp8chan.ui.activity.DeveloperActivity">
        </activity>
        <activity
            android:name="org.wingy.jp8chan.ui.activity.AdvancedSettingsActivity"
            android:label="@string/settings_advanced_label"
            android:parentActivityName="org.wingy.jp8chan.ui.activity.BoardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.wingy.jp8chan.ui.activity.BoardActivity"/>
        </activity>

        <service
            android:name="org.wingy.jp8chan.ui.service.WatchNotifier"
            android:exported="false">
        </service>
    </application>

</manifest>
